<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.snowline.spzx.manager.mapper.ProductSpecMapper">

    <resultMap id="productSpecMap" type="com.snowline.spzx.model.entity.product.ProductSpec" autoMapping="true"/>

    <!-- 用于select查询公用抽取的列 -->
    <sql id="columns">
        <if test="true">
            id,spec_name,spec_value,create_time,update_time,is_deleted
        </if>
    </sql>

    <!--    分页查询-->
    <select id="findByPage">
        select
        <include refid="columns"/>
        from product_spec
        where is_deleted = 0
        order by id desc
    </select>

    <!--    添加-->
    <insert id="save">
        insert into product_spec (id,
                                  spec_name,
                                  spec_value,
                                  create_time,
                                  update_time,
                                  is_deleted)
        values (#{id},
                #{specName},
                #{specValue},
                now(),
                now(),
                0)
    </insert>


    <!--    修改-->
    <update id="updateById">
        update product_spec set
        <if test="specName != null and specName != ''">
            spec_name = #{specName},
        </if>
        <if test="specValue != null and specValue != ''">
            spec_value = #{specValue},
        </if>
        update_time =now()
        where
        id =#{id}
    </update>

    <!--    删除-->
    <update id="deleteById">
        update product_spec
        set update_time = now(),
            is_deleted  = 1
        where id = #{id}
    </update>

</mapper>

